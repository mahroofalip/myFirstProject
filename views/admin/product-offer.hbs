        <div id="add-offer" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 class="h6">Add Product Offer </h6><button type="button" class="close" data-dismiss="modal"
                            aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">

                            <div class="col-lg-12">
                                <form id="proOfferForm" class="row form">

                                    <div class="col-sm-4 form-field"><label for="product" class="form-label">Search and
                                            Select Products
                                        </label>
                                        <input list="prod" name="Product" id="product" class="custom-select">
                                        <datalist id="prod">
                                            {{#each products}}
                                            <option class="text-dark" value="{{this.Name}}">
                                            </option>
                                            {{/each}}
                                        </datalist>

                                    </div>
                                    <div class="col-sm-4 form-field"><label for="validity" class="form-label"> Validity
                                        </label>
                                        <input name="Validity" type="datetime-local" id="validity" class="form-control">
                                    </div>





                                    <div class="col-sm-4 form-field"><label for="discount" class="form-label">Discount %
                                        </label> <input name="Discount" type="text" id="discount" class="form-control">
                                    </div>




                                    <div class="col-sm-12 form-field">
                                        <div class="btns justify-content-end"><input type="submit" class="btn bg-green"
                                                value="Save"> <button type="button" class="btn btn-border-gray"
                                                data-dismiss="modal" aria-label="Close">Cancel</button></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
