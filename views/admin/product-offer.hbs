                    <div class="page-header-item ml-auto"><a href="" class="btn btn-primary" data-toggle="modal"
                            data-target="#add-offer">Add New
                            Offers</a></div>
                </div>


                <div class="card card-shadow p-3">
                    <h6 class="h6 card-title">Product Offers List</h6>
                    <table id="datatable" class="table table-bordered table-hover mb-0">
                        <thead>
                            <tr>
                                <th>NO</th>
                                <th>Product</th>
                                <th>Discount %</th>
                                <th>Validity</th>

                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            {{#each productOff}}
                            <tr>


                                <td class="create_index"></td>
                                <td>{{this.Product}}</td>
                                <td>{{this.Discount}}%</td>
                                <td>{{this.Validity}}</td>

                                <td>
                                    <a style="background-color: whitesmoke;"
                                        onclick="deleteProOffer('{{this._id}}','{{this.Product}}')"><i
                                            style="font-size: 25px;" class="text-danger fa fa-times"
                                            aria-hidden="true"></i></a>


                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
