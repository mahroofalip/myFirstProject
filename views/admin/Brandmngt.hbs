        {{!-- add brnd model start--}}

        <div id="add-Brand" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 class="h6">Add Brand</h6><button type="button" class="close" data-dismiss="modal"
                            aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">

                            <div class="col-12">
                                <form action="/admin/brandmngt" method="post" class="row">
                                    <div class="col-12 form-field"><label style="display: inline;" for="product"
                                            class="title-small c-blue">Brand Name</label>


                                        <input name="brand" type="text" id="product" class="form-control"
                                            placeholder="Add Brand Name">
                                    </div>




                                    <div class="col-sm-6 form-field">
                                        <div class="btns justify-content-end">


                                            <input type="submit" class="btn bg-green" value="Save">
                                            <button type="button" class="btn btn-border-gray" data-dismiss="modal"
                                                aria-label="Close">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{!-- add end --}}

        {{!-- edit brnd model start --}}
        <div id="edit-Brand" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h6 class="h6">Edit Brand</h6><button type="button" class="close" data-dismiss="modal"
                            aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">

                            <div class="col-12">
                                <form action="/admin/brand-edit" method="post" class="row">
                                    <div class="col-12 form-field">

                                        <input id="idForEdit" name="id" value="" type="text" hidden>



                                        <label for="product" class="title-small c-blue">Brand Name</label>
                                        <input type="text" name="brand" id="brandForEdit" class="form-control" value="">
                                    </div>




                                    <div class="col-sm-6 form-field">
                                        <div class="btns justify-content-end"><input onclick="reload()" type="submit"
                                                class="btn bg-green" value="Save"> <button type="button"
                                                class="btn btn-border-gray" data-dismiss="modal"
                                                aria-label="Close">Cancel</button></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{!-- edit model end--}}
