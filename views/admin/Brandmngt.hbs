                {{!-- view category start --}}

                <div class="card card-shadow p-3">
                    <h6 class="h6 card-title">Brand List</h6>
                    <table id="datatable" class="table table-bordered table-hover mb-0">
                        <thead>
                            <tr>
                                <th>NO</th>
                                <th>Brand Name</th>
                                <th>Edit</th>
                                <th>Delete</th>


                            </tr>
                        </thead>
                        <tbody>
                            {{#each Brands}}
                            <tr>


                                <td class="create_index"></td>
                                <td>{{this.brand}}</td>
                                <td>





                                    <a onclick="editBrand('{{this._id}}')" style="background-color: whitesmoke;"
                                        class="" href="/admin/editCategory/{{this._id}}" data-toggle="modal"
                                        data-target="#edit-Brand"><i style="font-size: 25px;"
                                            class="text-success  fa fa-pencil-square-o" aria-hidden="true"></i></a>


                                </td>
                                <td>




                                    <a style="background-color: whitesmoke;"
                                        onclick="deleteBrand(event,'{{this._id}}','{{this.brand}}')"><i
                                            style="font-size: 25px;" class="text-danger fa fa-trash"
                                            aria-hidden="true"></i></a>

                                </td>





                            </tr>
                            {{/each}}
